<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_effect_white_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logan Kade (Fallen Crest High #5.5)"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toStartOf="@+id/tv_status"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang xử lí"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_title"
                android:layout_marginStart="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày mượn: "
                    android:textColor="@color/gray_100"/>

                <TextView
                    android:id="@+id/tv_borrow_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-03-17 15:05:40"
                    android:textColor="@color/gray_100"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>